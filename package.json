{
  "name": "javascript-development-environment",
  "version": "1.0.0",
  "description": "JavaScript development environment Pluralsight course by Cory House",
  "scripts": {
    "prestart": "ts-node buildScripts/startMessage",
    "start": "npm-run-all --parallel security-check open:source lint.watch test.watch start-mockapi",
    "open:source": "ts-node buildScripts/sourceServer",
    "lint": "esw webpack.config.*, source, buildScripts --color",
    "lint.watch": "npm run lint -- --watch",
    "security-check": "nsp check",
    "localtunnel": "lt --port 3000 --subdomain saber",
    "share": "npm-run-all --parallel open:source localtunnel",
    "test": "mocha --reporter progress --require ts-node/register buildScripts/testSetup.ts \"source/**/*.spec.ts\"",
    "test.watch": "npm run test -- --watch",
    "generate-mock-data": "ts-node buildScripts/generateMockData",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch source/api/db.json --port 3001",
    "clean": "ts-node buildScripts/clean",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "ts-node buildScripts/build",
    "postbuild": "ts-node buildScripts/distServer"
  },
  "author": "Cory House",
  "license": "MIT",
  "dependencies": {
    "@types/whatwg-fetch": "0.0.32",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chalk": "^0.4.31",
    "@types/compression": "0.0.33",
    "@types/core-js": "^0.9.34",
    "@types/del": "^2.2.31",
    "@types/express": "^4.0.33",
    "@types/html-webpack-plugin": "^2.22.3",
    "@types/jsdom": "^2.0.29",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "@types/open": "0.0.29",
    "@types/typescript": "^0.4.29",
    "@types/webpack": "^1.12.35",
    "@types/webpack-merge": "0.0.3",
    "awesome-typescript-loader": "^2.2.4",
    "babel-cli": "6.16.0",
    "babel-core": "6.17.0",
    "babel-loader": "6.2.5",
    "babel-preset-latest": "6.16.0",
    "babel-register": "6.16.3",
    "chai": "3.5.0",
    "chalk": "1.1.3",
    "cheerio": "0.22.0",
    "compression": "1.6.2",
    "cross-env": "3.1.3",
    "css-loader": "0.25.0",
    "eslint": "3.8.1",
    "eslint-plugin-import": "2.0.1",
    "eslint-watch": "2.1.14",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.22.0",
    "jsdom": "9.8.0",
    "json-schema-faker": "0.3.6",
    "json-server": "0.8.22",
    "localtunnel": "1.8.1",
    "mocha": "3.1.2",
    "nock": "8.1.0",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "numeral": "1.5.3",
    "open": "0.0.5",
    "rimraf": "2.5.4",
    "style-loader": "0.13.1",
    "ts-node": "^1.7.0",
    "typescript": "^2.0.9",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.8.4",
    "webpack-hot-middleware": "2.13.0",
    "webpack-md5-hash": "0.0.5"
  }
}
